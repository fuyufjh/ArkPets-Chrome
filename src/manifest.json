{
  "manifest_version": 3,
  "name": "ArkPets Chrome",
  "description": "Shows Arknights characters on web pages",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://raw.githubusercontent.com/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "models/*"
    ],
    "matches": ["<all_urls>"]
  }]
} 